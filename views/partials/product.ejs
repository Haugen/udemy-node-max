<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= imageURL %>" alt="<%= title %>">
  <div class="card-body">
    <h5 class="card-title"><%= title %></h5>
    <p class="card-text"><%= description %></p>
    <strong>$<%= price %></strong>
    <% if (admin) { %>
      <form method="POST" action="admin/delete-product" class="float-right ml-2">
        <button type="submit" class="btn btn-warning">Delete</button>
      </form>
      <a href="#" class="btn btn-secondary float-right">Edit</a>
    <% } else { %>
      <form method="POST" action="add-to-cart">
        <button class="btn btn-primary float-right">Add to Cart</button>
      </form>
    <% } %>
  </div>
</div>