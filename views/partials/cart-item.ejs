
<tr>
  <td><a href="/cart/remove/<%= product.id %>">X</a></td>
  <td><%= product.title %></td>
  <td>$<%= product.price %></td>
  <td><%= product.quantity %></td>
  <td>$<%= product.price * product.quantity %></td>
  <td>
    <a href="/cart/increase-quantity/<%= product.id %>">+</a> /
    <% if (product.quantity > 1) { %>
      <a href="/cart/decrease-quantity/<%= product.id %>">-</a>
    <% } else { %>
      -
    <% } %>
  </td>
</tr>